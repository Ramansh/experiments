    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>clirr-maven-plugin</artifactId>
                    <version>2.3</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
        <!--The CLIRR plugin produces reports which are linked to CAC
        http://confluence.atlassian.com/display/DEVNET/Atlassian+API+Changes
        However it is still under discussion how useful these reports are.
        -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>clirr-maven-plugin</artifactId>
                <configuration>
                    <comparisonVersion>${clirr.api.version}</comparisonVersion>
                </configuration>
            </plugin>
            <plugin>
               <!-- the enforcer checks are broken. disable them -->
               <artifactId>maven-enforcer-plugin</artifactId>
               <executions>
                  <execution>
                     <id>enforce-versions</id>
                     <phase>none</phase>
                  </execution>
               </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
            </plugin>
        </plugins>  
    </build>
    <profiles>
        <profile>
            <id>check-api</id>
            <activation>
                <property>
                    <name>performApiCheck</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <!-- This plugins makes sure we don't break our api / spi contract with the JIRA community.
                         Suppress API compatibility check by running Maven with -DskipApiCheck.  -->
                    <plugin>
                        <groupId>com.atlassian.annotations</groupId>
                        <artifactId>annotations-maven-plugin</artifactId>
                        <version>${annotations.version}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>check-api</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <comparisonVersion>${api.version}</comparisonVersion>
                            <exclusionsXml>${project.basedir}/src/main/resources/apibreaking-exclusions.xml</exclusionsXml>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>findbugs</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>findbugs-maven-plugin</artifactId>
                        <configuration>
                            <skip>false</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <properties>
        <api.version>6.0</api.version>
        <clirr.api.version>6.0</clirr.api.version>
    </properties>

